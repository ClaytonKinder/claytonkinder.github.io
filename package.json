{
  "name": "ck-portfolio",
  "version": "1.0.0",
  "description": "A website I built to strut my stuff. Built with SASS and good ol' fashioned vanilla JavaScript.",
  "scripts": {
    "build": "webpack --config webpack-prod.config.js --colors",
    "dev": "webpack-dev-server --open --config webpack-dev.config.js --watch --colors",
    "deploy": "npm run build && git add . && git commit -am 'Deploying.' && git push && push-dir --dir=dist --branch=master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ClaytonKinder/ck-portfolio"
  },
  "keywords": [
    "webpack",
    "startkit",
    "frontend",
    "es6",
    "javascript",
    "webdev"
  ],
  "author": "webkid.io",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wbkd/yet-another-webpack-es6-starterkit/issues"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "semi": 2
    }
  },
  "homepage": "https://github.com/wbkd/yet-another-webpack-es6-starterkit#readme",
  "devDependencies": {
    "babel-core": "^6.9.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.9.0",
    "copy-webpack-plugin": "^4.2.3",
    "css-loader": "^0.28.7",
    "eslint": "^4.6.1",
    "eslint-loader": "^1.3.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.17.0",
    "node-sass": "^4.1.1",
    "push-dir": "^0.4.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "url-loader": "^0.6.2",
    "webpack": "^3.5.6",
    "webpack-dev-server": "^2.7.1",
    "webpack-livereload-plugin": "^1.0.0"
  },
  "dependencies": {
    "animejs": "^2.2.0",
    "babel-polyfill": "^6.9.0",
    "imagesloaded": "^4.1.3",
    "imports-loader": "^0.7.1",
    "smoothscroll-polyfill": "^0.4.0",
    "spectre.css": "^0.5.0"
  }
}
